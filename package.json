{
  "name": "iranian-legal-archive",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://aminchedo.github.io/Aihoghoghi",
  "description": "Comprehensive Iranian legal document archive with AI-powered search and classification",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:comprehensive": "tsx src/test/runAllTests.ts",
    "test:unit": "vitest run src/test/utils/",
    "test:components": "vitest run src/components/",
    "test:services": "vitest run src/services/",
    "test:integration": "vitest run src/test/integration/",
    "test:performance": "vitest run --testNamePattern=\"Performance\"",
    "test:accessibility": "vitest run --testNamePattern=\"Accessibility\"",
    "test:persian": "vitest run --testNamePattern=\"Persian\"",
    "test:ai": "vitest run --testNamePattern=\"AI\"",
    "test:websocket": "vitest run --testNamePattern=\"WebSocket\"",
    "test:database": "vitest run --testNamePattern=\"Database\"",
    "test:report": "npm run test:coverage && npm run test:comprehensive",
    "backend:dev": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "backend:init": "cd backend && python startup.py",
    "deploy:build": "npm run build",
    "deploy:preview": "npm run preview"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.9",
    "axios": "^1.6.5",
    "date-fns": "^3.0.6",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.21.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "persian",
    "farsi",
    "legal",
    "archive",
    "iran",
    "documents",
    "ai",
    "bert",
    "classification",
    "search",
    "scraping"
  ],
  "author": "Iranian Legal Archive Team",
  "license": "MIT"
}
